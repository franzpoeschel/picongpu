{
  "$id": "https://registry.hzdr.de/crp/picongpu/schema/picongpu.pypicongpu.output.png.Png",
  "type": "object",
  "description": "PNG output configuration for PIConGPU",
  "unevaluatedProperties": false,
  "required": [
    "data_list",
    "period",
    "axis",
    "slicePoint",
    "species",
    "folder",
    "scale_image",
    "scale_to_cellsize",
    "white_box_per_GPU",
    "EM_FIELD_SCALE_CHANNEL1",
    "EM_FIELD_SCALE_CHANNEL2",
    "EM_FIELD_SCALE_CHANNEL3",
    "customNormalizationSI",
    "preParticleDens_opacity",
    "preChannel1_opacity",
    "preChannel2_opacity",
    "preChannel3_opacity",
    "preParticleDensCol",
    "preChannel1Col",
    "preChannel2Col",
    "preChannel3Col",
    "preChannel1",
    "preChannel2",
    "preChannel3"
  ],
  "properties": {
    "data_list": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "description": "Field or current component to output (e.g., 'Ex', 'Ey', 'Bz', 'Jx')."
          }
        },
        "required": [
          "name"
        ],
        "additionalProperties": false
      },
      "description": "List of (E & B) fields or current components to output."
    },
    "period": {
      "$ref": "https://registry.hzdr.de/crp/picongpu/schema/picongpu.pypicongpu.output.timestepspec.TimeStepSpec"
    },
    "axis": {
      "type": "string",
      "description": "2D plane for PNG output (e.g., 'yx')."
    },
    "slicePoint": {
      "type": "number",
      "minimum": 0.0,
      "maximum": 1.0,
      "description": "Ratio for the slice position in the dimension not used in axis (e.g., 'z')."
    },
    "species": {
      "$ref": "https://registry.hzdr.de/crp/picongpu/schema/picongpu.pypicongpu.species.species.Species"
    },
    "folder": {
      "type": "string",
      "description": "Output folder name."
    },
    "scale_image": {
      "type": "number",
      "description": "Factor to scale the output image size."
    },
    "scale_to_cellsize": {
      "type": "boolean",
      "description": "Whether to scale the image to account for non-quadratic cell sizes."
    },
    "white_box_per_GPU": {
      "type": "boolean",
      "description": "Show GPU boundaries with white boxes."
    },
    "EM_FIELD_SCALE_CHANNEL1": {
      "type": "integer",
      "enum": [
        -1,
        3,
        6,
        7
      ],
      "description": "Field scaling for channel 1 (e.g., AUTO=-1, PLASMA_WAVE=3, CUSTOM=6, INCIDENT=7)."
    },
    "EM_FIELD_SCALE_CHANNEL2": {
      "type": "integer",
      "enum": [
        -1,
        3,
        6,
        7
      ],
      "description": "Field scaling for channel 2."
    },
    "EM_FIELD_SCALE_CHANNEL3": {
      "type": "integer",
      "enum": [
        -1,
        3,
        6,
        7
      ],
      "description": "Field scaling for channel 3."
    },
    "customNormalizationSI": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "value": {
            "type": "number",
            "description": "Normalization value for a field component in SI units."
          }
        },
        "required": [
          "value"
        ],
        "additionalProperties": false
      },
      "minItems": 3,
      "maxItems": 3,
      "description": "Custom normalization values for fields in SI units (for CUSTOM scaling mode)."
    },
    "preParticleDens_opacity": {
      "type": "number",
      "minimum": 0.0,
      "maximum": 1.0,
      "description": "Opacity for particle density overlay."
    },
    "preChannel1_opacity": {
      "type": "number",
      "minimum": 0.0,
      "maximum": 1.0,
      "description": "Opacity for channel 1."
    },
    "preChannel2_opacity": {
      "type": "number",
      "minimum": 0.0,
      "maximum": 1.0,
      "description": "Opacity for channel 2."
    },
    "preChannel3_opacity": {
      "type": "number",
      "minimum": 0.0,
      "maximum": 1.0,
      "description": "Opacity for channel 3."
    },
    "preParticleDensCol": {
      "type": "string",
      "enum": [
        "red",
        "green",
        "blue",
        "gray",
        "grayInv",
        "none"
      ],
      "description": "Color scale for particle density."
    },
    "preChannel1Col": {
      "type": "string",
      "enum": [
        "red",
        "green",
        "blue",
        "gray",
        "grayInv",
        "none"
      ],
      "description": "Color scale for channel 1."
    },
    "preChannel2Col": {
      "type": "string",
      "enum": [
        "red",
        "green",
        "blue",
        "gray",
        "grayInv",
        "none"
      ],
      "description": "Color scale for channel 2."
    },
    "preChannel3Col": {
      "type": "string",
      "enum": [
        "red",
        "green",
        "blue",
        "gray",
        "grayInv",
        "none"
      ],
      "description": "Color scale for channel 3."
    },
    "preChannel1": {
      "type": "string",
      "description": "Custom expression for channel 1 (e.g., 'field_E.x() * field_E.x()')."
    },
    "preChannel2": {
      "type": "string",
      "description": "Custom expression for channel 2 (e.g., 'field_E.y()')."
    },
    "preChannel3": {
      "type": "string",
      "description": "Custom expression for channel 3 (e.g., '-1.0_X * field_E.y()')."
    }
  }
}
